<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_501" description="All Video Views">
		<control type="group" description="Big Icons">
			<visible>Control.IsVisible(501)</visible>
			<control type="fixedlist" id="501">
				<visible>Container.content(movies) | Container.content(tvshows) | Container.content(seasons)</visible>
				<posx>-270</posx>
				<posy>111</posy>
				<width>2400</width>
				<height>885</height>
				<pagecontrol>60</pagecontrol>
				<onup condition="!Skin.HasSetting(ViewOptions_Hide)">9000</onup>
				<ondown condition="$EXP[isEnabledScrollbar]">9002</ondown>
				<onleft>501</onleft>
				<onright>501</onright>
				<viewtype label="538">Big Icons 501</viewtype>
				<focusposition>2</focusposition>
				<movement></movement>
				<preloaditems>4</preloaditems>
				<orientation>horizontal</orientation>
				<scrolltime easing="inout">280</scrolltime>
				<itemlayout condition="Container.content(movies) | Container.content(tvshows) | Container.content(seasons)" width="330" height="480">
					<control type="image">
						<posx>12</posx>
						<posy>12</posy>
						<height>450</height>
						<width>300</width>
						<texture border="12">img/ThumbBorder.png</texture>
						<bordersize>-9</bordersize>
					</control>
					<control type="image" description="Thumb">
						<visible>ListItem.IsParentFolder</visible>
						<posx>12</posx>
						<posy>12</posy>
						<height>450</height>
						<width>300</width>
						<aspectratio>scale</aspectratio>
						<texture colordiffuse="$VAR[IconColor]" background="true">DefaultFolderBack.png</texture>
					</control>
					<control type="image" description="Thumb">
						<visible>!ListItem.IsParentFolder</visible>
						<posx>12</posx>
						<posy>12</posy>
						<height>450</height>
						<width>300</width>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[Thumb]</texture>
					</control>
					<control type="image">
						<posx>278</posx>
						<posy>428</posy>
						<width>30</width>
						<height>30</height>
						<texture>$VAR[Overlay]</texture>
						<aspectratio>keep</aspectratio>
					</control>					
				</itemlayout>
				<focusedlayout condition="Container.content(movies) | Container.content(tvshows) | Container.content(seasons)" width="330" height="480">
					<control type="image">
						<posx>12</posx>
						<posy>12</posy>
						<height>450</height>
						<width>300</width>
						<texture border="12">img/ThumbBorder.png</texture>
						<bordersize>-9</bordersize>
					</control>
					<control type="image" description="Thumb">
						<visible>ListItem.IsParentFolder</visible>
						<posx>12</posx>
						<posy>12</posy>
						<height>450</height>
						<width>300</width>
						<aspectratio>scale</aspectratio>
						<texture colordiffuse="$VAR[IconColor]" background="true">DefaultFolderBack.png</texture>
					</control>
					<control type="image" description="Thumb">
						<visible>!ListItem.IsParentFolder</visible>
						<posx>12</posx>
						<posy>12</posy>
						<height>450</height>
						<width>300</width>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[Thumb]</texture>
					</control>
					<control type="image">
						<posx>278</posx>
						<posy>428</posy>
						<width>30</width>
						<height>30</height>
						<texture>$VAR[Overlay]</texture>
						<aspectratio>keep</aspectratio>
					</control>										
				</focusedlayout>
			</control>
			<control type="image" description="Coverflow Selector">
				<posx>378</posx>
				<posy>102</posy>
				<width>348</width>
				<height>495</height>
				<texture border="36">focus/FrameFO.png</texture>
				<bordersize>-9</bordersize>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="group" description="Media details">
				<left>394</left>
				<top>630</top>
				<control type="label" description="Media details">
					<width>1230</width>
					<textcolor>HL</textcolor>
					<font>size24B</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label" description="Media details">
					<visible>!ListItem.IsParentFolder</visible>
					<top>54</top>
					<width>1200</width>
					<font>size22</font>
					<label>$INFO[ListItem.Genre]</label>
				</control>
				<control type="label" description="Media details">
					<visible>!ListItem.IsParentFolder + !String.Contains(ListItem.Path,videodb://movies/sets/)</visible>
					<top>102</top>
					<width>1200</width>
					<label>$VAR[TopLabel]</label>
				</control>
				<control type="textbox" description="Movies Plot">
					<visible>!ListItem.IsParentFolder</visible>
					<posy>174</posy>
					<width>1200</width>
					<height>210</height>
					<font>size20</font>
					<align>left</align>
					<autoscroll delay="8000" time="4300" repeat="10000">!Skin.HasSetting(_AutoScrollOff)</autoscroll>
					<label>$VAR[Plots]</label>
				</control>
			</control>
		</control>
	</include>
</includes>
